---
import type { HTMLAttributes } from 'astro/types';


interface Props extends HTMLAttributes<"h1"> {
}

const { ...rest } = Astro.props
---

<h1 class="hero-title" {...rest}>
    <slot/>
</h1>

<style>
    .hero-title {
        font-family:var(--font-family-heading);
        font-weight: 500;
        font-size: 6rem;
        line-height: 5rem;
        margin: 0;
    }
</style>
