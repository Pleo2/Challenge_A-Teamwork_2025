---
import { Image } from "astro:assets";

import RoundedShape from "./RoundedShape.astro";
import TagLine from "../../ui/TagLine.astro";
import HeroTitle from "./HeroTitle.astro";
import HeroTextContent from "./HeroTextContent.astro";
import CallToAction from "../../ui/CallToAction.astro";

const tagline = "Welcome to Vrume";
const title = "Drive Profits with Targeted Advertising Solutions";
const content =
    "Whether youâ€™re a seasoned marketer or just starting to scale your business, our customized online advertising strategies will accelerate your growth and drive targeted customers straight to your offers.";
const calltoactionButton = "Apply to become an Advertiser!".toUpperCase();

const image: { src: string; alt: string } = {
    src: "/assets/B&WManRed.webp",
    alt: "Bearded man sitting cross-legged, adjusting headphones while looking at a laptop on his lap. Behind him is a red heart-shaped figure, and on the laptop, there is a red graph with an upward arrow"
};
---

<section class="hero-container">
    <RoundedShape />
    <div class="hero-content">
        <div class="main-contend">
            <TagLine>{tagline}</TagLine>
            <HeroTitle>{title}</HeroTitle>
            <HeroTextContent>{content}</HeroTextContent>
            <CallToAction>{calltoactionButton}</CallToAction>
        </div>
        <div class="image-container">
            <Image
                class="image-b&w-man-red"
                src={image.src}
                alt={image.alt}
                width={500}
                height={500}
                loading="eager"
            />
        </div>
    </div>
</section>

<style>
    .hero-container {
        background-color: var(--color-bg-primary);
        height: 100dvh;
        color: var(--color-white);
        padding: 3rem;
        text-align: center;
        position: relative;
        overflow: hidden;
        display: flex;
        flex-basis: 1;
    }

    .hero-container::before {
        content: " ";
        position: absolute;
        bottom: -5dvh;
        right: 0;
        transform:;
        width: 30vw;
        height: 30vw;
        background-color: var(--color-dark-accent);
        border-radius: 9999px;
        filter: blur(5rem);
    }

    .hero-container::after {
        content: " ";
        position: absolute;
        top: 12dvh;
        transform: translateY(30dvh) translateX(-50%);
        left: 0;
        width: 60vw;
        height: 60vw;
        background-color: var(--color-dark-accent);
        border-radius: 9999px;
        filter: blur(6rem);
    }

    .hero-content {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        z-index: 10;
        padding-top: 8rem;
        /* background-color: bisque; */
        transform: translateY(-1%);
        height: 100%;
        width: 100%;
    }

    .main-contend {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 2.4rem;
        z-index: 10;
        height: 100%;
        width: 100%;
    }

    .image-container {
        display: none;
    }

    /* tablet style */
    @media (min-width: 768px) {
        .hero-container {
            background-color: var(--color-bg-primary);
            height: 60dvh;
            color: var(--color-white);
            padding: 3rem;
            text-align: center;
            position: relative;
            overflow: hidden;
            display: flex;
            flex-basis: 1;
        }
        .hero-container::after {
            content: " ";
            position: absolute;
            top: 5dvh;
            transform: translateY(30dvh) translateX(-50%);
            left: 0;
            width: 60vw;
            height: 60vw;
            background-color: var(--color-dark-accent);
            border-radius: 9999px;
            filter: blur(8rem);
        }
    }

    @media (min-width: 1024px) {
        .hero-container {
            height: 90dvh;
        }
        .hero-container::before {
            content: " ";
            position: absolute;
            bottom: -25rem;
            right: 0;
            transform: translateX(10%);
            width: 40rem;
            height: 40rem;
            background-color: var(--color-dark-accent);
            border-radius: 9999px;
            filter: blur(6rem);
        }

        .hero-container::after {
            content: " ";
            position: absolute;
            top: 40rem;
            bottom: 0;
            left: 0;
            transform: translateX(-45%);
            width: 30vw;
            height: 30vw;
            background-color: var(--color-dark-accent);
            border-radius: 9999px;
            filter: blur(12rem);
        }

        .hero-content {
            max-width: 120rem;
            margin: 0 auto;
            padding-left: 1rem;
            padding-right: 1rem;
            display: flex;
            gap: 2rem;
            /* background-color: rebeccapurple; */
            justify-content: space-between;
        }

        .main-contend {
            align-items: start;
            flex-basis: calc(0.7 * 100%);
            /* background-color: antiquewhite; */
        }

        .image-container {
            /* background-color: aliceblue; */
            display: flex;
            flex-basis: calc(0.4 * 100%);
            aspect-ratio: 1/1;
        }

        .image-b&w-man-red {
            width: 100%;
            height: 100%;
        }
    }

    @media (min-width: 1900px) {
        .hero-container {
            height: 85dvh;
        }
    }
</style>
