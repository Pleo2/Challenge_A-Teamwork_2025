---
import type { HTMLAttributes } from "astro/types";
import { type Testimonial } from "./Section-4.astro";

interface Props extends HTMLAttributes<"div">, Testimonial {}
const { name, content, company, ...rest } = Astro.props as Props;
---

<div class="card" {...rest}>
    <div class="card-content">
        <p class="card-info">
            {`"${content}"`}
        </p>
        <h2 class="card-name">{name}</h2>
        <p class="card-company">{company}</p>
    </div>
</div>

<style>
    .card {
        color: var(--color-black);
        font-size: 4rem;
        font-weight: 600;
        display: flex;
        align-items: center;
        justify-content: center;
        user-select: none;
    }

    .card-content {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        -webkit-box-shadow: -1px -1px 33px -6px rgba(138, 138, 138, 0.36);
        -moz-box-shadow: -1px -1px 33px -6px rgba(138, 138, 138, 0.36);
        box-shadow: -1px -1px 33px -6px rgba(138, 138, 138, 0.36);
        border-bottom: 2px solid var(--color-bright-accent);
        height: 30rem;
        padding: 4rem;
    }

    .card-info {
        color: var(--color-text-muted);
        opacity: 0.8;
        margin: 0;
        text-align: center;
        font-size: 1.2rem;
        font-weight: 400;
    }

    .card-name {
        color: var(--color-black);
        font-family: var(--font-family-heading);
        opacity: 0.9;
        margin-top: 3rem;
        font-size: 2.6rem;
        line-height: 1rem;

        font-weight: 600;
    }

    .card-company {
        color: var(--color-accent);
        margin: 0;
        text-align: center;
        line-height: 0;
        font-size: 1.5rem;
        font-weight: 500;
    }

    @media (min-width: 768px) {
        .card {
            width: 100%;
        }

        .card-content {
            height: 45rem;
            padding: 4rem;
        }

        .card-info {
            margin: 0;
            font-size: 2rem;
            font-weight: 400;
        }

        .card-name {
            margin-top: 4rem;
            font-size: 4rem;
            line-height: 1rem;
            font-weight: 600;
        }

        .card-company {
            margin: 0;
            text-align: center;
            line-height: 0;
            font-size: 2rem;
            font-weight: 500;
        }
    }

    @media (min-width: 1024px) {
        .card-content {
            height: 35rem;
            padding: 4rem;
        }

        .card-info {
            margin: 0;
            font-size: 1.5rem;
            font-weight: 400;
        }

        .card-name {
            margin-top: 4rem;
            font-size: 3.5rem;
            line-height: 1rem;
            font-weight: 600;
        }

        .card-company {
            margin: 0;
            text-align: center;
            line-height: 0;
            font-size: 2rem;
            font-weight: 500;
        }
    }
</style>
