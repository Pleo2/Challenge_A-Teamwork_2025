---

<div class="section-4">
    <section class="section-4-container">
        <div class="section-4-content">
            <TagLine textColor="var(--color-bright-accent)" paddingInline="4rem"
                >{tagline}</TagLine
            >
            <WhiteSectionTitle>{title}</WhiteSectionTitle>
        </div>
    </section>
    <Carousel testimonials={testimonials} />
</div>

<style>
    .section-4 {
        padding-bottom: 10rem;
    }
    .section-4-container {
        background-color: var(--color-white);
        height: max-content;
        color: var(--color-white);
        padding-inline: 1rem;
        width: 100%;
        padding-block: 4rem;
        text-align: center;
        position: relative;
        overflow: hidden;
        display: flex;
        flex-basis: 1;
    }

    .section-4-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 100%;
    }

    .cards-container {
        height: max-content;
        width: 100%;
        display: flex;
        flex-direction: column;
        margin-top: 30vw;
        gap: 30vw;
        margin-bottom: 10vw;
    }

    @media (min-width: 768px) {
        .section-4-container {
            padding-inline: 4rem;
        }

        .cards-container {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            grid-row: auto;
            gap: 4rem;
            margin-top: 5rem;
        }

        .cards-container > :last-child:nth-child(odd) {
            transform: translateX(63%);
        }
    }

    @media (min-width: 1024px) {
        .section-4-container {
            max-width: 120rem;
            margin: 0 auto;
            padding: 0;
            padding-block: 4rem;
        }

        .cards-container {
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            gap: 3rem;
            padding-inline: 1rem;
            justify-content: center;
            align-items: center;
        }

        .cards-container > :last-child:nth-child(odd) {
            transform: translateX(0%);
        }
    }
</style>
