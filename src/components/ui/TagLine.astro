---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"h2"> {
    textColor?: string;
    paddingInline?: string;
}

const { textColor, paddingInline, ...rest } = Astro.props;
---

<h2
    class="tagline"
    style={`color: ${textColor || "white"}; padding-inline: ${paddingInline || "2rem"}`}
    {...rest}
>
    <slot />
</h2>

<style>
    .tagline {
        font-family: var(--font-family-base);
        padding: 0.4rem;
        font-size: 1.8rem;
        border: 2px solid var(--color-bright-accent);
        border-radius: 5rem;
        letter-spacing: 0.2rem;
    }

    @media (min-width: 1024px) {
        .tagline {
            transform: translate(0, 65%);
        }
    }
</style>
