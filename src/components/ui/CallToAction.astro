---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"button"> {}

const { ...rest } = Astro.props;
---

<button class="call-to-action" {...rest}>
    <slot />
</button>

<style>
    .call-to-action {
        background-color: var(--color-bright-accent);
        border-radius: 999px;
        color: var(--color-text-base);
        font-size: 2rem;
        border: 1px solid var(--color-bright-accent);
        font-weight: bold;
        padding: 1rem;
        padding-inline: 2rem;
        letter-spacing: 0.1rem;
    }

    @media (min-width: 1024px) {
        .call-to-action {
            background-color: var(--color-bright-accent);
            border-radius: 999px;
            color: var(--color-text-base);
            font-size: 2rem;
            border: 1px solid var(--color-bright-accent);
            font-weight: bold;
            padding: 1rem;
            padding-inline: 2rem;
            letter-spacing: 0.1rem;
            margin-top: 1.2rem;
            transition: opacity var(--transition-duration) ease;
        }
        .call-to-action:hover {
            opacity: 0.9;
            cursor: pointer;
        }
    }
</style>
