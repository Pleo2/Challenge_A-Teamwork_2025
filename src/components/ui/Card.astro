---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"div"> {
    title?: string;
    img?: {
        url: string;
        alt: string;
    };
    info?: string;
}

const { title, img, info, ...rest } = Astro.props as Props;
---

<div class="card" {...rest}>
    <div class="card-content">
        <div class="img-card-container">
            <img src={img?.url} alt={img?.alt} class="img-card" />
        </div>
        <h2 class="card-title">{title}</h2>
        <p class="card-info">
            <Fragment set:html={info} />
        </p>
    </div>
</div>

<style>
    .card {
        color: var(--color-black);
    }

    .card-content {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        -webkit-box-shadow: 1px -5px 35px -20px rgba(20, 20, 20, 0.52);
        -moz-box-shadow: 1px -5px 35px -20px rgba(20, 20, 20, 0.52);
        box-shadow: 1px -5px 35px -20px rgba(20, 20, 20, 0.52);
        border-bottom: 2px solid var(--color-bright-accent);
        height: max-content;
        padding: 1rem;
        height: 35rem;
    }
    .img-card-container {
        border: 2px var(--color-bright-accent) solid;
        position: absolute;
        border-radius: 999px;
        width: 25%;
        aspect-ratio: 1 / 1;
        transform: translateY(-180%);
        background-color: var(--color-white);
    }
    .card-title {
        color: var(--color-black);
        margin-top: 3rem;
        font-size: 2.6rem;
        line-height: 2.8rem;
        font-weight: 600;
    }
    .card-info {
        color: var(--color-black);
        margin: 0;
        font-size: 1.6rem;
        line-height: 2.5rem;
        font-weight: 400;
    }

    @media (min-width: 768px) {
        .card {
            width: 100%;
            margin-top: 6rem;
        }

        .img-card-container {
            border: 2px var(--color-bright-accent) solid;
            position: absolute;
            border-radius: 999px;
            width: 10rem;
            aspect-ratio: 1 / 1;
            transform: translateY(-180%);
            background-color: var(--color-white);
        }
    }

    @media (min-width: 1024px) {
        .card {
            width: 30%;
        }
    }
</style>
